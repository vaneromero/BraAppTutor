<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerJ23"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/juego4"
    tools:context=".games.adivinanzas.adivi3">

    <LinearLayout
        android:id="@+id/adivi3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
            app:lottie_renderMode="automatic"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/cadena2"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:importantForAutofill="no"
                android:textAlignment="center"
                android:visibility="gone" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarJ23"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:minHeight="?attr/actionBarSize"
                android:outlineAmbientShadowColor="@color/transparente"
                android:outlineSpotShadowColor="@color/transparente"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subtitleTextColor="@color/transparente"
                app:titleTextColor="@color/transparente"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
<TextView
        android:id="@+id/fotoj5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/nina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView5"
        app:layout_constraintStart_toEndOf="@+id/toolbarJ14"
        app:layout_constraintTop_toTopOf="parent" />


                <androidx.cardview.widget.CardView

                    android:id="@+id/cardView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    app:cardBackgroundColor="#D5CFF9"
                    app:cardCornerRadius="52dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vida"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/userj5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gentium_book_basic_bold"
                            android:gravity="center"
                            android:text="@string/cancelar"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cont">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagen">

                <Space
                    android:layout_width="6sp"
                    android:layout_height="0sp" />

                <TextView
                    android:id="@+id/mue1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/muert"
                    android:fontFamily="@font/gentium_book_basic_bold"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textColor="@color/negro"
                    android:textSize="60sp" />

                <Space
                    android:layout_width="6sp"
                    android:layout_height="0sp" />

                <TextView
                    android:id="@+id/mue2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:background="@drawable/muert"
                    android:fontFamily="@font/gentium_book_basic_bold"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:textSize="60sp" />

                <Space
                    android:layout_width="6sp"
                    android:layout_height="0sp" />

                <TextView
                    android:id="@+id/mue3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:background="@drawable/muert"
                    android:fontFamily="@font/gentium_book_basic_bold"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:textSize="60sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adivinanza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gentium_book_basic_bold"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/imagen2"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textAlignment="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/teal_70011"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/btnuno2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/off1"
                                        android:text="1"
                                        android:textColor="#A6FFFFFF"
                                        android:textSize="70sp" />

                                    <Button
                                        android:id="@+id/btndos2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/off1"
                                        android:text="2"
                                        android:textColor="#A6FFFFFF"
                                        android:textSize="70sp" />

                                    <Button
                                        android:id="@+id/btntres2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/off1"
                                        android:text="3"
                                        android:textColor="#A6FFFFFF"
                                        android:textSize="70sp" />
                                </LinearLayout>

                                <Space
                                    android:layout_width="10sp"
                                    android:layout_height="0sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/btncuatro2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/off1"
                                        android:text="4"
                                        android:textColor="#A6FFFFFF"
                                        android:textSize="70sp" />

                                    <Button
                                        android:id="@+id/btncinco2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/off1"
                                        android:text="5"
                                        android:textColor="#A6FFFFFF"
                                        android:textSize="70sp" />

                                    <Button
                                        android:id="@+id/btnseis2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/off1"
                                        android:text="6"
                                        android:textColor="#A6FFFFFF"
                                        android:textSize="70sp" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reiniciar6"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/regresar"
                android:textColor="#E8FEFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/verificar5"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginEnd="24dp"
                android:background="@drawable/verifi"
                android:fontFamily="@font/gentium_book_basic_bold"
                android:padding="10sp"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/reiniciar6"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout12"
                app:layout_constraintTop_toTopOf="@+id/reiniciar6"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="52dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/verificar5"
                app:layout_constraintEnd_toStartOf="@+id/pista3"
                app:layout_constraintTop_toTopOf="@+id/verificar5"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/marcadorA4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gentium_book_basic_bold"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/basea" />
            </LinearLayout>

            <Button
                android:id="@+id/pista3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/pregunta"
                android:textColor="#E8FEFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout12"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_viewJ23"
        style="@style/Widget.Custom.NavigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clipToPadding="false"
        android:theme="@style/Theme.NavigationView"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>