<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerPS2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/productt2"
    android:orientation="vertical"
    tools:context=".catalogo.producto.ProdRec">

    <LinearLayout
        android:id="@+id/com67udfsjy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_renderMode="automatic"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/confdt44"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_renderMode="automatic"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/wiffaa"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/wifis"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingClass,RtlHardcoded" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarPS2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:minHeight="?attr/actionBarSize"
                    android:outlineAmbientShadowColor="@color/transparente"
                    android:outlineSpotShadowColor="@color/transparente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:subtitleTextColor="@color/transparente"
                    app:titleTextColor="@color/transparente"
                    tools:ignore="UnusedAttribute" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/conttt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgProfilesdstg"
        android:layout_width="200dp"
        android:layout_height="200dp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:focusable="false"
                            app:cardBackgroundColor="#D5CFF9"
                            app:cardCornerRadius="52dp"
                            app:cardElevation="30dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                tools:ignore="UseCompoundDrawables">

                                <TextView
                                    android:id="@+id/bu232tfd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gentium_book_basic_bold"
                                    android:gravity="center"
                                    android:text="@string/cancelar"
                                    android:textColor="#000000"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/avisos1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/productod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gentium_book_basic_bold"
                            android:gravity="center_horizontal"
                            android:maxLength="50"
                            android:text="@string/conectate_para_ver_los_productos_disponibles"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="30sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/Recomendad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gentium_book_basic_bold"
                            android:gravity="center_horizontal"
                            android:maxLength="50"
                            android:text="@string/conectate_para_ver_las_recomendaciones_disponibles"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="30sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/productosP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/swipeRefreshPropio1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="MissingConstraints">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/PropioRecyclerView"
                                android:layout_width="396dp"
                                android:layout_height="823dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                app:layoutManager="LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.659"
                                tools:listitem="@layout/producto_content" />
                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/productosR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/swipeRefreshRecomendacion1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="MissingConstraints">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/RecomendacionRecyclerView"
                                android:layout_width="396dp"
                                android:layout_height="823dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                app:layoutManager="LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.659"
                                tools:listitem="@layout/producto_content" />
                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_viewPS2"
        style="@style/Widget.Custom.NavigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clipToPadding="false"
        android:theme="@style/Theme.NavigationView"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>