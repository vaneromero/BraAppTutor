<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerT8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/traduccion2"
    android:orientation="vertical"
    tools:context=".traductor.braes.BraesNum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/comdfddssp3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_renderMode="automatic"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/confdt44"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_renderMode="automatic"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarT8"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:minHeight="?attr/actionBarSize"
                    android:outlineAmbientShadowColor="@color/transparente"
                    android:outlineSpotShadowColor="@color/transparente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:subtitleTextColor="@color/transparente"
                    app:titleTextColor="@color/transparente"
                    tools:ignore="UnusedAttribute" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/cont44">

    <TextView
        android:id="@+id/fotito1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/nina" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    app:cardBackgroundColor="#D5CFF9"
                    app:cardCornerRadius="52dp"
                    app:cardElevation="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/usu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gentium_book_basic_bold"
                            android:gravity="center"
                            android:text="@string/cancelar"
                            android:textColor="#000000"
                            android:textSize="35sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded">

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/avisos1"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gentium_book_basic_bold"
                            android:padding="10dp"
                            android:text="@string/braille_espa_ol"
                            android:textAlignment="center"
                            android:textColor="@color/negro"
                            android:textSize="30sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <LinearLayout
                            android:id="@+id/comm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/simm" />
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="10dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

                <LinearLayout
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/next_panel"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/letra3"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:fontFamily="@font/gentium_book_basic_bold"
                        android:gravity="center"
                        android:text="@string/simbolo_en_braille"
                        android:textColor="#000"
                        android:textSize="40sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/letra1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <Space
                                    android:layout_width="0sp"
                                    android:layout_height="10dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <Button
                                                android:id="@+id/btnuno3"
                                                android:layout_width="120sp"
                                                android:layout_height="120sp"
                                                android:background="@drawable/off1"
                                                android:text="@string/_1"
                                                android:textAlignment="center"
                                                android:textColor="#A6FFFFFF"
                                                android:textSize="70sp" />

                                            <Button
                                                android:id="@+id/btndos3"
                                                android:layout_width="120sp"
                                                android:layout_height="120sp"
                                                android:layout_marginTop="5dp"
                                                android:background="@drawable/off1"
                                                android:text="@string/_2"
                                                android:textAlignment="center"
                                                android:textColor="#A6FFFFFF"
                                                android:textSize="70sp" />

                                            <Button
                                                android:id="@+id/btntres3"
                                                android:layout_width="120sp"
                                                android:layout_height="120sp"
                                                android:layout_marginTop="5dp"
                                                android:background="@drawable/off1"
                                                android:text="@string/_3"
                                                android:textAlignment="center"
                                                android:textColor="#A6FFFFFF"
                                                android:textSize="70sp" />
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="40sp"
                                            android:layout_height="0sp" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <Button
                                                android:id="@+id/btncuatro3"
                                                android:layout_width="120sp"
                                                android:layout_height="120sp"
                                                android:background="@drawable/off1"
                                                android:text="@string/_4"
                                                android:textAlignment="center"
                                                android:textColor="#A6FFFFFF"
                                                android:textSize="70sp" />

                                            <Button
                                                android:id="@+id/btncinco3"
                                                android:layout_width="120sp"
                                                android:layout_height="120sp"
                                                android:layout_marginTop="5dp"
                                                android:background="@drawable/off1"
                                                android:text="@string/_5"
                                                android:textAlignment="center"
                                                android:textColor="#A6FFFFFF"
                                                android:textSize="70sp" />

                                            <Button
                                                android:id="@+id/btnseis3"
                                                android:layout_width="120sp"
                                                android:layout_height="120sp"
                                                android:layout_marginTop="5dp"
                                                android:background="@drawable/off1"
                                                android:text="@string/_6"
                                                android:textAlignment="center"
                                                android:textColor="#A6FFFFFF"
                                                android:textSize="70sp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <Space
                                        android:layout_width="0sp"
                                        android:layout_height="10sp"
                                        tools:ignore="SmallSp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/convertir"
                                            style="@style/CustomButton1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/gentium_basic"
                                            android:gravity="center"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:text="@string/convertir"
                                            android:textAlignment="center"
                                            android:textAllCaps="false"
                                            android:textColor="@color/blanco"
                                            android:textSize="25sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlCompat,RtlSymmetry,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                                        <Space
                                            android:layout_width="10sp"
                                            android:layout_height="0sp" />

                                        <Button
                                            android:id="@+id/limpiar4"
                                            style="@style/CustomButton1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/gentium_basic"
                                            android:gravity="center"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:text="@string/limpiar"
                                            android:textAlignment="center"
                                            android:textAllCaps="false"
                                            android:textColor="@color/blanco"
                                            android:textSize="25sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlCompat,RtlSymmetry,TouchTargetSizeCheck,TouchTargetSizeCheck" />
                                    </LinearLayout>
                                </LinearLayout>

                                <Space
                                    android:layout_width="0sp"
                                    android:layout_height="10sp"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_viewT8"
        style="@style/Widget.Custom.NavigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clipToPadding="false"
        android:theme="@style/Theme.NavigationView"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>